# Wrapper script for unified_eqmap.py

DIR="$(dirname "$0")"
PYTHON_SCRIPT="$DIR/runtool.py"

if [ ! -f "$PYTHON_SCRIPT" ]; then
    echo "Error: Python script $PYTHON_SCRIPT not found"
    exit 1
fi

exec python3 "$PYTHON_SCRIPT" "$@"
